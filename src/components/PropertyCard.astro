---
const {image, title, description, price} = Astro.props;
---

<div class="card w-full lg:w-96 bg-white shadow-xl">
    <figure><img src={image} alt={title} class="w-full h-48 object-cover"/>
    </figure>
    <div class="card-body">
        <h2 class="card-title">{title}</h2>
        <p>{description}</p>
        <div class="card-actions justify-end">
            <button class="btn btn-outline btn-primary">View Details</button>
            <span class="text-lg font-bold text-primary">${price}</span>
        </div>
    </div>
</div>
